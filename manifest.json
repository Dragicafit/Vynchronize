{
  "description": "Watch your favorite anime on Wakanim with your friends.",
  "manifest_version": 2,
  "name": "Wakanim With Friends",
  "version": "0.2",
  "homepage_url": "https://github.com/Dragicafit/Wakanim-With-Friends",
  "icons": {
    "16": "icons/wakanim-16x16.png",
    "32": "icons/wakanim-32x32.png"
  },
  "permissions": [
    "*://*.wakanim.tv/*/episode/*",
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background-script.js"
    ]
  },
  "browser_action": {
    "default_title": "Wakanim With Friends",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    "js/script.js"
  ]
}