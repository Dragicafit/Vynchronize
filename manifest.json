{

  "description": "Sync wakanim videos",
  "manifest_version": 2,
  "name": "Wakanim With Friends",
  "version": "1.0",
  "homepage_url": "https://github.com/Dragicafit/Wakanim-With-Friends",

  "permissions": [
    "*://*.wakanim.tv/*/episode/*",
    "activeTab",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": [ "js/background-script.js" ]
  },

  "browser_action": {
    "default_title": "Wakanim With Friends",
    "default_popup": "popup/popup.html"
  },

  "web_accessible_resources": [
    "*",
    "*/*",
    "*/*/*",
    "*/*/*/*",
    "*/*/*/*/*"
  ]
}
